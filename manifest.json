{
  "manifest_version": 3,
  "name": "Context-Snap",
  "version": "1.0.0",
  "description": "One-click context feeder for AI workflows.",
  "action": {},
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "commands": {
    "snap_context": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Snap Context to Clipboard"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "css": ["src/toast.css"]
    }
  ]
}
